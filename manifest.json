{
    "manifest_version": 3,
    "name": "QuipIn",
    "description": "A personal, witty reply assistant â€“ right where you need it",
    "version": "0.3.0",
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["content_linkedin.js"]
        },
        {
            "matches": ["https://www.reddit.com/*"],
            "js": ["content_reddit.js"]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "options.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        }
    }
}